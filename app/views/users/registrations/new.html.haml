.header
  = link_to '/wines/index' do
    = image_tag 'IMG_7119.jpg', class: 'bimi-m'
.content2
  .content2-title
    %span 新規ユーザー登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :NickName
    = f.text_field :nickname, placeholder: "テスト" ,autocomplete: "nickname"
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, placeholder: "test@co.jp", autocomplete: "email"
  .field
    = f.label :password
    = f.password_field :password, placeholder: "6文字以上" ,autocomplete: "new-password"
  .field
    = f.label :password_確認用
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render 'module/footer'