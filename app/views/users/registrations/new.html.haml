.header
  = link_to '/wines/index' do
    .title
      %p Bimi Wine
.content2
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.text_field :nickname, placeholder: "ニックネーム" ,autocomplete: "nickname"
      %i.fa.fa-user.fa-lg.fa-fw{"aria-hidden" => "true"}
    .field
      = f.email_field :email, placeholder: "メールアドレス", autocomplete: "email"
      %i.fa.fa-envelope.fa-lg.fa-fw{"aria-hidden" => "true"}
    .field
      = f.password_field :password, placeholder: "6文字以上パスワード" ,autocomplete: "new-password"
      %i.fa.fa-key{"aria-hidden" => "true"}
    .field
      = f.password_field :password_confirmation, placeholder: "パスワード確認用" ,autocomplete: "パスワード確認用"
      %i.fa.fa-key{"aria-hidden" => "true"}
    .actions
      = f.submit "登録", class: "submit-btn"
= render 'module/footer'