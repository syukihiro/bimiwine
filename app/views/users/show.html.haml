.header
  = link_to '/wines/index' ,style: "text-decoration: none" do
    .title
      %p Bimi Wine
.content3
  .content3-title
    %span #{@user.nickname}
  .content3-menu
    = link_to '/wines/new' do
      %i.far.fa-plus-square
      %span 投稿
    = link_to "/wines/goodpage" do
      %i.far.fa-heart
      %span いいね一覧
    = link_to "/users/edit" do
      %i.far.fa-address-card
      %span プロフィール編集
    = link_to destroy_user_session_path, method: :delete, class: 'navbar-link' do
      %i.fas.fa-sign-out-alt
      %span ログアウト
.post-box
  - if @winesimages.present?
    - @winesimages.each do |image|
      %ul
        %li
          = link_to wine_path(image.wine_id) do
            = image_tag image.images.url, class: "wines-pict2"